{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "resolveJsonModule": true,
    "checkJs": true
  },
  "include": ["src/**/*", "*.js"]
}
